{
  "$id": "https://github.com/instill-ai/mgmt-backend/blob/main/configs/models/user.yaml",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "User",
  "description": "The user data structure",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "usage_data_collection", "newsletter_subscription"],
  "properties": {
    "name": {
      "type": "string",
      "title": "Resource name",
      "description": "The resource name",
      "readOnly": true,
      "ui_order": 0,
      "ui_hidden": true,
      "ui_disabled": true,
      "ui_component": "text"
    },
    "uid": {
      "type": "string",
      "format": "uuid",
      "title": "UUID",
      "description": "The unique UUID",
      "readOnly": true,
      "ui_order": 1,
      "ui_hidden": true,
      "ui_disabled": true,
      "ui_component": "text"
    },
    "email": {
      "type": "string",
      "format": "email",
      "title": "Your email",
      "description": "Fill your email address",
      "ui_order": 2,
      "ui_component": "text_email",
      "ui_placeholder": "hello@instill.tech"
    },
    "id": {
      "type": "string",
      "title": "Username",
      "description": "Pick a username that is unique",
      "pattern": "^[a-z]([a-z0-9-]{0,61}[a-z0-9])?$",
      "minLength": 1,
      "maxLength": 63,
      "readOnly": true,
      "ui_order": 3,
      "ui_hidden": true,
      "ui_disabled": true,
      "ui_component": "text",
      "ui_placeholder": "local-user"
    },
    "company_name": {
      "type": "string",
      "title": "Your company",
      "description": "Fill the name of your company",
      "ui_order": 4,
      "maxLength": 255,
      "ui_component": "text",
      "ui_placeholder": "Instill AI"
    },
    "role": {
      "type": "string",
      "title": "Your role",
      "description": "Pick a role closest to your job in your company",
      "enum": [
        "manager",
        "ai-researcher",
        "ai-engineer",
        "data-engineer",
        "data-scientist",
        "analytics-engineer",
        "hobbyist"
      ],
      "ui_order": 5,
      "ui_component": "select",
      "ui_enum": [
        "Manager (who make decisions)",
        "AI Researcher (who devises ML algorithms, train and evaluate models)",
        "AI Engineer (who prepare dataset and make models delivered by AI Researchers production-ready)",
        "Data Engineer (who builds data pipeline for data analytics or applications)",
        "Data Scientist (who analyses data for distilling business value)",
        "Analytics Engineer (who possesses skills of both Data Scientist and Data Engineer)",
        "Hobbyist (I love Vision AI!)"
      ]
    },
    "usage_data_collection": {
      "type": "boolean",
      "title": "Anonymize usage data collection",
      "description": "We collect data only for product improvements",
      "default": false,
      "ui_order": 6,
      "ui_component": "toggle"
    },
    "newsletter_subscription": {
      "type": "boolean",
      "title": "Newsletter subscription",
      "description": "Receive the latest news from Instill AI including open source updates, community highlights, blog posts, useful tutorials and more! You can unsubscribe any time.",
      "default": false,
      "ui_order": 7,
      "ui_component": "toggle"
    },
    "type": {
      "type": "string",
      "title": "Type",
      "description": "The type of the account",
      "enum": [
        "OWNER_TYPE_UNSPECIFIED",
        "OWNER_TYPE_USER",
        "OWNER_TYPE_ORGANIZATION"
      ],
      "default": "OWNER_TYPE_USER",
      "readOnly": true,
      "ui_order": 8,
      "ui_hidden": true,
      "ui_disabled": true,
      "ui_component": "select",
      "ui_enum": ["", "User", "Organization"]
    },
    "create_time": {
      "type": "string",
      "format": "date-time",
      "title": "Create time",
      "description": "The date when the user is created in the format YYYY-MM-DDTHH:MM::SS",
      "examples": ["2022-04-29T00:20:06.703547Z"],
      "readOnly": true,
      "ui_order": 9,
      "ui_hidden": true,
      "ui_disabled": true,
      "ui_component": "text"
    },
    "update_time": {
      "type": "string",
      "format": "date-time",
      "title": "Update time",
      "description": "The date when the pipeline is updated in the format YYYY-MM-DDTHH:MM::SS",
      "examples": ["2022-04-29T01:33:34.910865Z"],
      "readOnly": true,
      "ui_order": 10,
      "ui_hidden": true,
      "ui_disabled": true,
      "ui_component": "text"
    }
  }
}
